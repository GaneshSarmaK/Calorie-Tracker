<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_horizontal_margin">

    <Spinner
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:id="@+id/foodCategory">

    </Spinner>
    <Spinner
        android:layout_width="150dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="170dp"
        android:layout_height="wrap_content"
        android:id="@+id/food">

    </Spinner>

    <EditText
        android:layout_width="match_parent"
        style="@android:style/Widget.EditText"
        android:layout_height="40dp"
        android:id="@+id/spinnerServings"
        android:layout_marginTop="100dp"
        android:hint="Enter the number of servings"
        android:textStyle="italic"
        android:gravity="center"
        android:inputType="number"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/addFood2"
        android:hint="Add Food to Consumption"
        android:layout_marginTop="160dp"/>


    <EditText
        android:id="@+id/editText"
        style="@android:style/Widget.EditText"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginTop="230dp"
        android:hint="Enter food name here"
        android:textStyle="italic"
        android:gravity="center"/>
    <EditText
        android:id="@+id/editTextServing"
        style="@android:style/Widget.EditText"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="290dp"
        android:inputType="number"
        android:hint="Enter the number of servings"
        android:textStyle="italic"
        android:gravity="center" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Add New Food to Consumption"
        android:layout_marginTop="360dp"
        android:id="@+id/addFood"
        android:layout_gravity="center"/>
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="470dp"
        android:id="@+id/foodImage" />

    <TextView
        android:id="@+id/foodData"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:layout_marginTop="470dp"
        android:layout_marginLeft="215dp"
        android:gravity="center_horizontal"
        />
</RelativeLayout>